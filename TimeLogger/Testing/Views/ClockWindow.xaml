<Window x:Class="TimeLogger.Testing.Views.ClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:testing="clr-namespace:TimeLogger.Testing"
        d:DataContext="{d:DesignInstance Type=testing:ClockViewModel}"
        mc:Ignorable="d"
        Title="ClockWindow" Height="99.358" Width="408.806">
    <Grid VerticalAlignment="Stretch">
        <xctk:DateTimePicker VerticalAlignment="Top"  Value="{Binding Date, Mode=TwoWay}"></xctk:DateTimePicker>
        <Button Click="CloseAction" VerticalAlignment="Bottom">Return</Button>
    </Grid>
</Window>
