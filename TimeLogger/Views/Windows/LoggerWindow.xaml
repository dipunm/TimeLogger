<Window x:Class="TimeLogger.Windows.LoggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TimeLogger.Views.UserControls"
        xmlns:vm="clr-namespace:TimeLogger.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        d:DataContext="{d:DesignInstance Type=vm:LoggerViewModel}"
        Height="211" Width="599"
        Title="{Binding Title}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:Statistics Grid.Row="0" DataContext="{Binding Stats}" />
        <controls:Form Grid.Row="1" DataContext="{Binding Entry}" />
    </Grid>
</Window>